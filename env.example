# Копируйте в .env и заполните значения
# Деплой на Timeweb: создайте PostgreSQL в панели, скопируйте хост, имя БД, пользователя и пароль

# Django
DJANGO_SECRET_KEY=ваш-секретный-ключ-для-prod
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.ru,www.your-domain.ru

# PostgreSQL (Timeweb: панель → Базы данных → создать PostgreSQL)
# Хост обычно: xxx-xxx.twc1.net или localhost при Shared hosting
DB_HOST=localhost
DB_NAME=имя_базы
DB_USER=пользователь
DB_PASSWORD=пароль
DB_PORT=5432

# Медиа: по умолчанию сохраняются локально в media/
# Для облака S3 (опционально) раскомментируйте:
# USE_S3_MEDIA=1
# AWS_STORAGE_BUCKET_NAME=ваш-бакет
# AWS_ACCESS_KEY_ID=ключ
# AWS_SECRET_ACCESS_KEY=секрет
# AWS_S3_ENDPOINT_URL=https://s3.twcstorage.ru
# AWS_S3_REGION_NAME=ru-1
